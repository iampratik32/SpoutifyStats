<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/topSong_Card"
    android:backgroundTint="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:id="@+id/topSong_Index"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/topSong_Image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:src="@drawable/spotify" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topSong_Image"
            android:layout_margin="5dp"
            android:id="@+id/topSong_Name"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topSong_Name"
            android:layout_margin="5dp"
            android:id="@+id/topSong_Artist"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>